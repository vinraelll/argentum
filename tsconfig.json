{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["src/app/*"],
      "@pages/*": ["src/app/pages/*"],
      "@features/*": ["src/app/features/*"],
      "@entities/*": ["src/app/entities/*"],
      "@shared/*": ["src/app/shared/*"],
      "@widgets/*": ["src/app/widgets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
